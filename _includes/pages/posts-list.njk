<ul class="postlist">
  {% for post in postsList %}
  <li
    class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}"
  >
    <a href="{{ post.url | url }}" class="postlist-link">
      {% if post.data.title %}
      {{ post.data.title }}
      {% else %}
      <code>{{ post.url }}</code>
      {% endif %}
    </a>
    <time
      class="postlist-date"
      datetime="{{
        post.date.toLocaleDateString('en-NZ', {
          year: 'numeric',
          month: 'short',
          day: 'numeric'
        })
      }}"
    >
      {{
        post.date.toLocaleDateString('en-NZ', {
          year: 'numeric',
          month: 'short',
          day: 'numeric'
        })
      }}
    </time>
      {% for tag in post.data.tags %} 
        {%- if tag != "posts" -%} 
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="post-tag">{{ tag | formatTag }}</a>
        {%- endif -%} {%- if not loop.last %}, {% endif %} {% endfor %}
  </li>
  {% endfor %}
</ul>

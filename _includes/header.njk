<header class="blog-header">
  <a class="blog-name" href="/">
    {{ global.blogTitle }}
  </a>
  <nav class="links">
    <a href="/" class="{{ 'active' if page.url == '/' }}"> /home </a>
    <a href="/posts" class="{{ 'active' if page.url.startsWith('/posts') }}">
      /posts
    </a>
    <a
      href="/projects"
      class="{{ 'active' if page.url.startsWith('/projects') }}"
    >
      /projects
    </a>
    <a
      href="/reading-list"
      class="{{ 'active' if page.url.startsWith('/reading-list') }}"
    >
      /reading-list
    </a>
    <!-- <a
      href="/recipes"
      class="{{ 'active' if page.url.startsWith('/recipes') }}"
    >
      /recipes
    </a> -->
    <a
      href="/hobbies"
      class="{{ 'active' if page.url.startsWith('/hobbies') }}"
    >
      /hobbies
    </a>
  </nav>

  <button
    title="Turn darkmode on"
    aria-label="Turn darkmode on"
    aria-pressed="false"
    tabindex="0"
    id="theme-toggle"
    onclick="toggleDarkMode()"
  >
    <svg
      width="17"
      height="17"
      class="moon"
      role="img"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <title>Turn darkmode off</title>
      <path
        d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
      />
    </svg>
    <svg
      width="17"
      height="17"
      class="sun"
      role="img"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <title>Turn darkmode on</title>
      <path
        fill-rule="evenodd"
        d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
        clip-rule="evenodd"
      />
    </svg>
  </button>
</header>
